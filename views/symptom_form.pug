extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='symptom') Symptom:
      input#germ_symptom.form-control(type='text', placeholder='Vomiting, diarrhea, etc.' symptom='symptom' value=(undefined===symptom ? '' : symptom.name))

    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg