extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Food:
      input#food_name.form-control(type='text', placeholder='Chicken, Alfalfa Sprouts etc.' name='name' value=(undefined===food ? '' : food.name))

      label(for='category') Category:
      input#food_category.form-control(type='text', placeholder='Poultry, Vegetables etc.' category='category' value=(undefined===food ? '' : food.category))

      label(for='preparation') Preparation:
      input#food_preparation.form-control(type='text', placeholder='Cooked or Raw.' preparation='preparation' value=(undefined===food ? '' : food.preparation))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg