extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='full_name') Germ Full Name:
      input#germ_full_name.form-control(type='text', placeholder='Escherichia coli, etc.' full_name='full_name' value=(undefined===germ ? '' : germ.full_name))

      label(for='short_name') Germ Short Name:
      input#germ_short_name.form-control(type='text', placeholder='E. coli etc.' short_name='short_name' value=(undefined===germ ? '' : germ.short_name))

      label(for='sources') Germ Sources:
      input#germ_sources.form-control(type='text', placeholder='Eggs, Raw Chicken, Turtles etc.' sources='sources' value=(undefined===germ ? '' : germ.sources))

      label(for='incubation_period') Germ Incubation Period:
      input#germ_incubation_period.form-control(type='text', placeholder='# Hours or Days etc.' incubation_period='incubation_period' value=(undefined===germ ? '' : germ.incubation_period))

      label(for='duration') Illness Duration:
      input#germ_duration.form-control(type='text', placeholder='#Hours or Days etc.' duration='duration' value=(undefined===germ ? '' : germ.duration))

      label(for='symptoms') Symptoms:
      input#germ_symptoms.form-control(type='text' placeholder='Vomiting, Diarrhea, etc.' symptoms='symptoms' value=(undefined===germ ? '' : germ.symptoms))

      label(for='care') Care at Home:
      input#germ_care.form-control(type='text', placeholder='Drink fluids, get rest, etc.' care='care' value=(undefined===germ ? '' : germ.care))

      label(for='prevention') Prevention:
      input#germ_prevention.form-control(type='text', placeholder='Wash hands after touching raw meat, etc.' prevention='prevention' value=(undefined===germ ? '' : germ.prevention))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg